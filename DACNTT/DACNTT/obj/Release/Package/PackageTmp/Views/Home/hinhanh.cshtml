@model IEnumerable<DACNTT.Models.Images>
@using DACNTT.Models
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/styles/zoom.css" rel="stylesheet" />
    <link href="~/Content/styles/(2)nav_bar.css" rel="stylesheet" />
    <link href="~/Content/styles/button.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="logo"><a href="/Home/Index"><img src="~/Content/images/logo.png" alt="">travelix</a></div>
        <nav>
            <ul class="nav_links">
                <li><a href="/Home/Index">Trang chủ</a></li>
                <li><a href="/Home/About">Về chúng tôi</a></li>
                <li><a href="/Home/Contact">Tiếp cận</a></li>
                <li><a href="/Home/Blog">Mới</a></li>
                <li><a href="/Home/DSHOTEL">Khách sạn</a></li>
            </ul>
        </nav>
        @*<a class="cta" href="#"><button>Hello</button></a>*@
    </header>
    <div class="row" style="background: #1d1b31">    
        @foreach (var item in ViewBag.Images)
        {
            <div class="col-lg-4 col-md-12 mb-4 mb-lg-0">
                @foreach (var i in ViewBag.hotels)
                {
                    if (i.hotel_id == item.hotel_id)
                    {
                        <span><img data-action="zoom" class="pull-left" style="margin-left:80px; margin-top:50px ;width:70%; height:70%; border-radius:20px" src="@item.Image" /></span>
                    }
                }
            </div>
        }
    </div>
</body>
</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="~/Content/js/zoom.js"></script>
