@model DACNTT.Models.bookcustomer
@{
    ViewBag.Title = "EditForAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="~/Content/styles/login.css" rel="stylesheet" />
    </head>
<body>
<div class="login-box">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NameCus, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NameCus, new { htmlAttributes = new { required = "required" } })
                @Html.ValidationMessageFor(model => model.NameCus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { type = "email", id = "email", name = "email", pattern = "[A-Za-z].{3,}", required = "required" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Phone, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { pattern = "[0-9].{9}", title = "Nhập đúng số điện thoại, đủ 10 số", required = "required" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayStart, "CheckIn", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayStart, new { htmlAttributes = new { title = "dd-mm-yyyy", required = "required" } })
                @Html.ValidationMessageFor(model => model.NgayStart, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayEnd, "CheckOut", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayEnd, new { htmlAttributes = new { title = "dd-mm-yyyy", required = "required" } })
                @Html.ValidationMessageFor(model => model.NgayEnd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TrangThai, new List<SelectListItem>()
               {
                   new SelectListItem(){Selected = true, Text ="Còn hạn", Value = "1"},
                   new SelectListItem(){Selected = false, Text ="Hết hạn", Value = "2"},
               }, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
        </div>
        <br>
        <div class="form-group" hidden>
            @Html.LabelFor(model => model.room_id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.room_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.room_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

        <div>@Html.ActionLink("Quay lại", "Admin", "Home")</div>

    }
</div>
</body>