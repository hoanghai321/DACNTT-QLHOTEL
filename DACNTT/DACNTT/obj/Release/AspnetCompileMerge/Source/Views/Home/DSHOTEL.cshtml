                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 order-lg-2 order-1">
                    <div class="footer_nav_container d-flex flex-row align-items-center justify-content-lg-end">
                        <div class="footer_nav">
                            <ul c lass="footer_nav_list">
                                <li class="footer_nav_item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                                <li class="footer_nav_item">@Html.ActionLink("Về chúng tôi", "About", "Home")</li>
                                <li class="footer_nav_item">@Html.ActionLink("Tiếp cận", "Contact", "Home")</li>
                                <li class="footer_nav_item">@Html.ActionLink("Mới", "Blog", "Home")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


