@using PagedList;
@using PagedList.Mvc;
@model IPagedList<DACNTT.Models.hotels>
@{
    ViewBag.Title = "DSHOTEL";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Travelix Project">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Content/styles/bootstrap4/bootstrap.min.css">
    <link href="~/Content/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Content/styles/offers_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/styles/offers_responsive.css">
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    <div class="super_container">
        <header class="header">
            <div class="top_bar">
                <div class="container">
                    <div class="row">
                        <div class="col d-flex flex-row">
                            <div class="phone">Hotline: +849 33037283</div>
                            <div class="social">
                                <ul class="social_list">
                                    <li class="social_list_item"><a href="https://www.pinterest.com/"><i class="fa fa-pinterest"></i></a></li>
                                    <li class="social_list_item"><a href="https://www.facebook.com/profile.php?id=100009744285303"><i class="fa fa-facebook-f"></i></a></li>
                                    <li class="social_list_item"><a href="https://twitter.com/?lang=vi"><i class="fa fa-twitter"></i></a></li>
                                    <li class="social_list_item"><a href="https://dribbble.com/"><i class="fa fa-dribbble"></i></a></li>
                                    <li class="social_list_item"><a href="https://www.behance.net/"><i class="fa fa-behance"></i></a></li>
                                </ul>
                            </div>
                            <div class="user_box ml-auto">
                                <div class="user_box_login user_box_link">@Html.ActionLink("Login", "Login", "Account")</div>
                                <div class="user_box_register user_box_link">@Html.ActionLink("Register", "Register", "Account")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <nav class="main_nav">
                <div class="container">
                    <div class="row">
                        <div class="col main_nav_col d-flex flex-row align-items-center justify-content-start">
                            <div class="logo_container">
                                <div class="logo"><a href="/Home/Index"><img src="~/Content/images/logo.png" alt="">travelix</a></div>
                            </div>
                            <div class="main_nav_container ml-auto">
                                <ul class="main_nav_list">
                                    <li class="main_nav_item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                                    <li class="main_nav_item">@Html.ActionLink("Về chúng tôi", "About", "Home")</li>
                                    <li class="main_nav_item">@Html.ActionLink("Tiếp cận", "Contact", "Home")</li>
                                    <li class="main_nav_item">@Html.ActionLink("Mới", "Blog", "Home")</li>
                                    <li class="main_nav_item">@Html.ActionLink("Khách sạn", "DSHOTEL", "Home")</li>
                                </ul>
                            </div>
                            <form action="~/Home/Cart">
                                <div class="content_search ml-lg-0 ml-auto">
                                    <button type="submit" class="btn btn-warning">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                                            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"></path>
                                        </svg>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <div class="menu trans_500">
            <div class="menu_content d-flex flex-column align-items-center justify-content-center text-center">
                <div class="menu_close_container"><div class="menu_close"></div></div>
                <div class="logo menu_logo"><a href="#"><img src="~/Content/images/logo.png" alt=""></a></div>
                <ul>
                    <li class="menu_item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li class="menu_item">@Html.ActionLink("Về chúng tôi", "About", "Home")</li>
                    <li class="menu_item">@Html.ActionLink("Tiếp cận", "Contact", "Home")</li>
                    <li class="menu_item">@Html.ActionLink("Mới", "Blog", "Home")</li>
                    <li class="main_item">@Html.ActionLink("Khách sạn", "DSHOTEL", "Home")</li>
                </ul>
            </div>
        </div>
        <!-- Home -->
        <div class="home">
            <!-- Home Slider -->
            <div class="home_slider_container">
                <div class="owl-carousel owl-theme home_slider">
                    <!-- Slider Item -->
                    <div class="owl-item home_slider_item">
                        <!-- Image -->
                        <div class="home_slider_background" style="background-image: url('../../Content/images/home_slider.jpg')"></div>

                        <div class="home_slider_content text-center">
                            <div class="home_slider_content_inner" data-animation-in="flipInX" data-animation-out="animate-out fadeOut">
                                <h1>TRAVELIX</h1>
                                <h1>Ngôi nhà của bạn</h1>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Home Slider Nav - Prev -->
                <div class="home_slider_nav home_slider_prev">
